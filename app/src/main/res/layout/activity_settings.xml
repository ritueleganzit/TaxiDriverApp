<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    >


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEndWithActions="0dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/back"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"

            android:orientation="vertical">
            <LinearLayout
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="#000"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="20sp"></TextView>



            </LinearLayout>
            <com.eleganzit.taxidriverapp.utils.MyNestedScrollView
                android:layout_width="match_parent"
                android:fillViewport="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#ffffff"
                    android:layout_below="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="#efefef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile"
                                android:fontFamily="@font/poppins_medium"

                                android:textColor="@color/dkblack"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark">
                        <!-- <com.facebook.login.widget.ProfilePictureView
                             android:id="@+id/friendProfilePicture"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerInParent="true"
                             />-->
                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:transitionName="simple_activity_transition"
                            android:src="@drawable/images"
                            android:layout_gravity="top"
                            android:elevation="1dp"
                            app:civ_border_width="2dp"
                            app:civ_circle_background_color="@android:color/white"
                            app:civ_border_color="#ffff" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginLeft="20dp"
                                android:orientation="vertical">
                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="#000"
                                    android:id="@+id/fname"
                                    android:text="Ritu Rajan"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"

                                    android:fontFamily="@font/poppins_regular"
                                    android:text="+91 9898098980"
                                    android:id="@+id/phone"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/> <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"

                                android:fontFamily="@font/poppins_regular"
                                android:text="ritunambath@gmail.com"

                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
                            </LinearLayout>

                            <ImageView
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/ic_right_arrow"
                                android:layout_margin="8dp"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="#efefef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Favourites"
                                android:fontFamily="@font/poppins_medium"

                                android:textColor="@color/dkblack"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="5dp"
android:id="@+id/mydoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:layout_margin="8dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Documents"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>


                        </LinearLayout>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_margin="8dp"/>
                    </LinearLayout>
                    <View
                        android:layout_toRightOf="@+id/wheretogo"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef " />

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:id="@+id/myvehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:layout_margin="8dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vehicle Management"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_margin="8dp"/>

                    </LinearLayout>
                    <View
                        android:layout_toRightOf="@+id/wheretogo"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef " />

                    <LinearLayout
                        android:background="#efefef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Privacy Policy"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_margin="8dp"/>

                    </LinearLayout>
                    <View
                        android:layout_toRightOf="@+id/wheretogo"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef " />
                    <LinearLayout
                        android:layout_margin="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terms and Conditions"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_margin="8dp"/>

                    </LinearLayout>

                    <View
                        android:layout_toRightOf="@+id/wheretogo"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef " />
                    <LinearLayout
                        android:layout_margin="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Help"

                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_margin="8dp"/>

                    </LinearLayout>
                    <View
                        android:layout_toRightOf="@+id/wheretogo"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef " />
                    <LinearLayout
                        android:layout_margin="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About Us"

                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_margin="8dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:background="#efefef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logout"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/colorPrimary"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </com.eleganzit.taxidriverapp.utils.MyNestedScrollView>
        </LinearLayout>





    </RelativeLayout>
</RelativeLayout>
