<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    >


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEndWithActions="0dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/back"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"

            android:orientation="vertical">
            <LinearLayout
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment"
                    android:textColor="#000"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="20sp"></TextView>



            </LinearLayout>
            <com.eleganzit.taxidriverapp.utils.MyNestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_below="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">
                    <LinearLayout
                        android:background="#efefef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Methods"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/mastercard"
                            android:layout_margin="8dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**** 8000 (India)"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_margin="8dp"/>

                    </LinearLayout>
                    <View
                        android:layout_toRightOf="@+id/wheretogo"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef " />
                    <LinearLayout
                        android:layout_margin="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/mastercard"
                            android:layout_margin="8dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="**** 7676 (India)"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_margin="8dp"/>

                    </LinearLayout>

                    <View
                        android:layout_toRightOf="@+id/wheretogo"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef " />

                    <LinearLayout
                        android:layout_margin="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/mastercard"
                            android:layout_margin="8dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cash Payment"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_margin="8dp"/>

                    </LinearLayout>
                    <View
                        android:layout_toRightOf="@+id/wheretogo"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef " />
                    <LinearLayout
                        android:id="@+id/addpayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Payment Method"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/colorPrimary"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:background="#efefef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Offers &amp; Discount"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/discount"
                            android:layout_margin="8dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20% off on first three ride"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_margin="8dp"/>

                    </LinearLayout>
                    <View
                        android:layout_toRightOf="@+id/wheretogo"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef " />
                    <LinearLayout
                        android:layout_margin="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/discount"
                            android:layout_margin="8dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10% off on online payment"
                                android:fontFamily="@font/poppins_regular"

                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                        </LinearLayout>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow"
                            android:layout_margin="8dp"/>

                    </LinearLayout>
                    <View
                        android:layout_toRightOf="@+id/wheretogo"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#efefef " />
                </LinearLayout>
            </com.eleganzit.taxidriverapp.utils.MyNestedScrollView>
        </LinearLayout>





    </RelativeLayout>
</RelativeLayout>
