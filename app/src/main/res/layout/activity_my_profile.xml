<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    >


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEndWithActions="0dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_gravity="start"
                android:id="@+id/back"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:padding="10dp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"

                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"></TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:fitsSystemWindows="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#fff"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar">
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f7f7f7"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_below="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/pic_layout"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:gravity="left|center_vertical"
                        android:layout_gravity="left"
                        android:layout_margin="15dp"
                        android:scaleType="centerInside"
                        android:orientation="vertical" >



                        <RelativeLayout
                            android:padding="5dp"
                            android:id="@+id/user_add"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:transitionName="simple_activity_transition"

                                android:id="@+id/profile_pic"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:src="@drawable/images" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                />

                        </RelativeLayout>

                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/content"
                android:layout_below="@+id/header"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                >
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_toLeftOf="@+id/next"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:layout_alignParentStart="true"
                        app:errorTextAppearance="@style/error_appearance"
                        android:padding="5dp"

                        app:hintTextAppearance="@style/hint_appearance"
                        >
                        <EditText
                            android:fontFamily="@font/poppins_regular"
                            android:id="@+id/fname"
                            android:layout_width="match_parent"
                            android:maxLines="1"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:paddingTop="10dp"
                            android:text="Ritu"
                            android:textSize="16sp"
                            android:background="@null"
android:focusable="false"
                            android:inputType="textPersonName"
                            android:layout_height="wrap_content"
                            android:hint="First Name"
                            android:textColorHint="#878787"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:id="@+id/next"
                        android:layout_centerVertical="true"
                        android:layout_width="12dp"
                        android:layout_margin="5dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_back"></ImageView>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#85B6B6B6"></View>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"

                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/error_appearance"
                        app:hintTextAppearance="@style/hint_appearance"
                        >
                        <EditText
                            android:id="@+id/lname"
                            android:layout_width="match_parent"
                            android:maxLines="1"
                            android:inputType="textPersonName"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_height="wrap_content"
                            android:hint="Last Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:paddingTop="10dp"
                            android:text="Rajan"
                            android:textSize="16sp"
                            android:background="@null"
                            android:focusable="false"
                            android:textColorHint="#878787"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:id="@+id/next2"
                        android:layout_centerVertical="true"
                        android:layout_width="12dp"
                        android:layout_margin="5dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_back"></ImageView>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#85B6B6B6"></View>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/next3"
                        android:padding="5dp"

                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/error_appearance"
                        app:hintTextAppearance="@style/hint_appearance"
                        >
                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:maxLines="1"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="textEmailAddress"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:paddingTop="10dp"
                            android:text="ritu@gmail.com"
                            android:textSize="16sp"
                            android:background="@null"
                            android:focusable="false"
                            android:textColorHint="#878787"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:id="@+id/next3"
                        android:layout_centerVertical="true"
                        android:layout_width="12dp"
                        android:layout_margin="5dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_back"></ImageView>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#85B6B6B6"></View>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"

                    android:layout_height="wrap_content"
                    app:errorTextAppearance="@style/error_appearance"
                    app:hintTextAppearance="@style/hint_appearance"
                    >
                    <EditText

                        android:id="@+id/ch_password"
                        android:layout_width="match_parent"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:focusable="false"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:paddingTop="10dp"
                        android:text="9898098980"
                        android:textSize="16sp"
                        android:background="@null"

                        android:textColorHint="#878787"
                        />
                </com.google.android.material.textfield.TextInputLayout>



                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:padding="5dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:errorTextAppearance="@style/error_appearance"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/next4"
                        app:hintTextAppearance="@style/hint_appearance"
                        >
                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:maxLines="1"
                            android:focusable="false"
                            android:fontFamily="@font/poppins_regular"
                            android:inputType="number"
                            android:layout_height="wrap_content"
                            android:hint="Phone Number"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:paddingTop="10dp"
                            android:text="9898098980"
                            android:textSize="16sp"
                            android:background="@null"

                            android:textColorHint="#878787"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:id="@+id/next4"
                        android:layout_centerVertical="true"
                        android:layout_width="12dp"
                        android:layout_margin="5dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_back"></ImageView>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#85B6B6B6"></View>


            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/content"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_gravity="bottom"
                android:id="@+id/findride"
                android:layout_margin="35dp"
                android:visibility="gone"
                android:layout_marginBottom="?attr/actionBarSize"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Save"
                    android:id="@+id/updateData"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#fff"/>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
