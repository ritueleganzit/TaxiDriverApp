<?xml version="1.0" encoding="utf-8"?>
<com.eleganzit.taxidriverapp.utils.MyNestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.MainActivity">

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="25dp"
        android:textSize="50sp"
        android:layout_gravity="center"

        android:layout_above="@+id/lin"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taxi"
        android:textColor="@color/black"
        android:fontFamily="@font/varianescript"

        ></TextView>

    <LinearLayout
        android:id="@+id/lin"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:contentPadding="10dp"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_user"
                    ></ImageView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"

                    android:hint="Name"
                    android:textColor="@color/black"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:contentPadding="10dp"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_email"
                    ></ImageView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"

                    android:hint="Email"
                    android:textColor="@color/black"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_phone"></ImageView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Phone"
                    android:gravity="center_vertical"
                    android:inputType="phone|textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:contentPadding="10dp"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_gender"
                    ></ImageView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
android:focusable="false"
                    android:hint="Gender"
                    android:textColor="@color/black"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text|textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:contentPadding="10dp"
            android:id="@+id/date"
            android:clickable="true"

            android:layout_height="wrap_content"
            >
            <LinearLayout

                android:gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_date"
                    ></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:cursorVisible="false"
                    android:hint="Date of Birth"
                    android:textColor="@color/black"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="date|textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:contentPadding="10dp"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_auth"
                    ></ImageView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"

                    android:hint="Auth Code (optional)"
                    android:textColor="@color/black"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text|textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:background="@android:color/white"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:contentPadding="10dp"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lock"
                    ></ImageView>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="center_vertical"

                    android:hint="Password"
                    android:textColor="@color/black"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textWebPassword|textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/black"            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="18dp"
            android:layout_marginLeft="10dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginRight="10dp"
            app:contentPadding="12dp"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Sign UP"

                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginBottom="5dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"

            android:gravity="center"></TextView>

        <TextView
            android:layout_marginBottom="5dp"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" SIGN IN"
            android:id="@+id/signin"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsbold"

            android:gravity="center"></TextView>


    </LinearLayout>



</LinearLayout>
</com.eleganzit.taxidriverapp.utils.MyNestedScrollView>